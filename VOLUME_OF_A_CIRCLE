/* package codechef; // don't place package name! */

import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	    Scanner sc=new Scanner(System.in);
	    
		int r=sc.nextInt();  //*user put the radius
		
		double Volume=(double)0;  //*as volume of a cicle either can be integer or double .so in that case we use double for decimal data type
		
		Volume=1.333333333*3.14*(r*r*r); //*as 4/3=1.333333333 and pi=3.14(approx) and as formula there is cube of the radius;volume of a circle=4/3*pi*r th cube
		
		System.out.println("The volume of the circle is "+Volume);  //*then print the final calculated volume of the particular given radius by the user
	}
	
}
