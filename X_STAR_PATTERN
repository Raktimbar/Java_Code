/* package codechef; // don't place package name! */

import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
			{
		Scanner sc=new Scanner(System.in);           //*user give the data to the compiler
		   
		     int n=sc.nextInt();
		         
				 int c=n;
		
		    for(int i=1;i<=c;i++)
						{
						
						for(int j=1;j<=c;j++)
							{
								if(j==i || j==c-i+1 )
									{
										System.out.print("*");
									}
									else
											{
											System.out.print(" "); 
											}
							}
		        System.out.println();
						}
			}
}
